{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
    "outDir": "./dist", // Указывает, куда помещать скомпилированные файлы
    "rootDir": "./src"  // Указывает, где искать исходники
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
